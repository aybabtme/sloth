<% page_version = comments %>
<% page = page_version.page %>

<div id="comments">
  <h3>Comments</h3>
  <div id="commentsForm">
    <%= form_for [:admin, page.prototype, page, page_version, @comment || page_version.comments.build], remote: true do |f| %>
      
        <%= f.error_messages %>

        <div class="field">
          <%= f.label :body %><br />
          <%= f.text_area :body, rows: 2, cols: 80 %>
        </div>
        <div class="actions">
          <%= f.submit "Submit" %>
        </div>
      
    <% end %>
  </div>
  
  <% page.comments.each do |comment| %>
    <div id="comment">
      <h4>
        <%= comment.user.name %>
        <%= comment.created_at.to_s(:standard) %>
        (Version #<%= comment.page_version.version %>)
      </h4>
      <p><%= comment.body %></p>
    </div>
  <% end %>
</div>
