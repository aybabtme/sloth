<!DOCTYPE html>
<html>
<head>
  <title>Sloth</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<header class="header">
  <div class="inner">
    <div class="header-title">
      <%= content_for :header_title %>
    </div>
    <div class="header-menu">
      <%= content_for :header_menu %>
    </div>
  </div>
</header>

<div class="content">
  <div class="inner">
    <%= yield %>
  </div>
</div>

</body>
</html>
